{
  "name": "vite-template",
  "version": "1.0.0",
  "scripts": {
    "app:dev": "vite --open",
    "dev": "vite",
    "start": "multiplerun dev",
    "build": "tsc --noEmit && vite build",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "precommit": "lint-staged"
  },
  "multiplerun": {
    "dev": [
      "yarn run tsc --watch --noEmit",
      "yarn run app:dev"
    ]
  },
  "lint-staged": {
    "src/{**/*,*}/*.{ts,tsx}": [
      "cross-env CI=true vitest related"
    ]
  },
  "dependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.1.1",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@terra-money/terra.js": "^3.0.2",
    "@terra-money/wallet-provider": "^3.6.5",
    "add": "^2.0.6",
    "autoprefixer": "^10.4.4",
    "buffer": "^6.0.3",
    "daisyui": "^2.13.6",
    "solid-app-router": "^0.3.2",
    "solid-heroicons": "^2.0.3",
    "solid-js": "^1.3.13",
    "solid-markdown": "^1.2.0",
    "solid-slider": "^1.2.7",
    "typescript": "^4.6.3",
    "vite-compatible-readable-stream": "^3.6.0",
    "yarn": "^1.22.18"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "babel-preset-solid": "^1.3.13",
    "cross-env": "^7.0.3",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-solid": "^0.4.6",
    "lint-staged": "^11.2.6",
    "multiplerun": "^2.0.1",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.0.23",
    "vite": "^2.6.14",
    "vite-plugin-solid": "^2.2.6",
    "vite-plugin-svgr": "^0.5.1",
    "vite-tsconfig-paths": "^3.3.17",
    "vitest": "^0.0.134"
  }
}
